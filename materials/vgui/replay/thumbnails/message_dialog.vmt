"UnlitGeneric"
{
	"$translucent" 1
	"$baseTexture" "vgui\replay/thumbnails\message_dialog"
	"$detail" "vgui\replay/thumbnails\message_dialog_mask"
	$detailscale 1
	$detailblendmode 8
	$distancealphafromdetail 1

	// give it a slight outer soft edge
	$softedges 0
	$edgesoftnessstart 0.5
    	$edgesoftnessend 0.4
	$scaleedgesoftnessbasedonscreenres 1

	// give it a white outline
	$outline 1
	$outlinecolor "[1.0 0.45 0.0]"
	$outlinestart0 0.0
	$outlinestart1 0.1
	$outlineend0 0.6
	$outlineend1 0.7
	$scaleoutlinesoftnessbasedonscreenres 1

	// and a drop shadow
	$glow 0
	$glowcolor "[0 0 0]"
	$glowalpha 0.5
	$glowstart 0
	$glowend 0.5
	$glowx -0.01
	$glowy -0.01


//	"$vertexcolor" 1
	 $distancealpha 1
	"$no_fullbright" 1
	"$ignorez" 1
	"%keywords" "tf"
}


